<script>
    let cart = [];
    function addToCart(bikeName){
        cart.push(bikeName);
        document.getElementById("cart-items").innerText = "Cart :" + cart.join(",");
    }

    document.getElementById("searchbox").addEventListener("keyup",function(){
        let filter = this.value.toLowerCase();
        let bikes = document.querySelectorAll(".bike-card"); //array of bikes[total bike list]
        bikes.forEach(bike=>{
            let name = bike.getAttribute("data-name").toLowerCase();
            bike.style.display = name.includes(filter)?"block" : "none";
        })
    })
    document.getElementById("contactform").addEventListener("submit",function(e){

        let name = document.getElementById("name").value.trim()
        let email = document.getElementById("email").value.trim()
        let phone = document.getElementById("phone").value.trim()
        let message = document.getElementById("message").value.trim()

        if (name==="" || email==="" || phone==="" || message===""){
            alert("All fields are required");
            return;
        }
        if(!email.includes("@")){
            alert("Enter a valid email");
            return;
        }
        if(phone.length<10){
            alert("Enter the valid mobile number");
            return;
        }
        document.getElementById("contact").style.display = "none"
        document.getElementById("thankyou").style.display = "block"

            })
</script>
